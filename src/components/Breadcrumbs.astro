---
const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-8">
  <ol class="flex items-center gap-2 text-sm text-zinc-600">
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        {index > 0 && <span class="text-zinc-400">/</span>}
        {(item.url || item.href) ? (
          <a href={item.url || item.href} class="hover:text-orange-500 transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-zinc-700 font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
