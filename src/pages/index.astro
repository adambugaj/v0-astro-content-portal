---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CategoryGrid from '../components/CategoryGrid.astro';
import ArticleCard from '../components/ArticleCard.astro';

const latestArticles = [
  {
    title: 'Jak wybrać fundamenty pod dom jednorodzinny',
    excerpt: 'Kompleksowy przewodnik po typach fundamentów, ich zaletach i wadach oraz kosztach wykonania.',
    category: 'Budowa',
    href: '/budowa/fundamenty-dom-jednorodzinny',
    date: '2024-03-15'
  },
  {
    title: 'Izolacja termiczna ścian zewnętrznych',
    excerpt: 'Porównanie metod docieplenia budynków, materiałów izolacyjnych i wskazówki praktyczne.',
    category: 'Dom',
    href: '/dom/izolacja-termiczna-scian',
    date: '2024-03-14'
  },
  {
    title: 'Projektowanie małej łazienki - 10 zasad',
    excerpt: 'Praktyczne porady jak maksymalnie wykorzystać przestrzeń w małym pomieszczeniu.',
    category: 'Wnętrza',
    href: '/wnetrza/projektowanie-malej-lazienki',
    date: '2024-03-13'
  },
  {
    title: 'Rośliny odporne na suszę do ogrodu',
    excerpt: 'Najlepsze gatunki roślin które przetrwają upalne lato bez częstego podlewania.',
    category: 'Ogród',
    href: '/ogrod/rosliny-odporne-na-susze',
    date: '2024-03-12'
  }
];

const calculators = [
  {
    title: 'Kalkulator materiałów budowlanych',
    description: 'Oblicz ilość cegieł, betonu i innych materiałów',
    href: '/kalkulatory/materialy-budowlane'
  },
  {
    title: 'Kalkulator kosztów budowy',
    description: 'Szacunkowe koszty budowy domu',
    href: '/kalkulatory/koszty-budowy'
  },
  {
    title: 'Kalkulator zaprawy murarskiej',
    description: 'Ile zaprawy potrzebujesz do murowania',
    href: '/kalkulatory/zaprawy'
  }
];
---

<MainLayout 
  title="Portal Budowlany - Ekspertka wiedza o budowie, wnętrzach i ogrodach" 
  description="Profesjonalne porady budowlane, projektowe i ogrodnicze. Kalkulatory, artykuły eksperckie i praktyczne wskazówki dla Twojego domu."
  canonicalURL="https://example.com/"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 via-white to-green-50 py-16 sm:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            Ekspertka wiedza dla Twojego domu i ogrodu
          </h1>
          <h2 class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed">
            Profesjonalne porady budowlane, inspiracje do wnętrz, kalkulatory i sprawdzone rozwiązania — wszystko w jednym miejscu
          </h2>
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="#artykuly" 
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-colors rounded-lg shadow-md"
            >
              Przeglądaj artykuły
            </a>
            <a 
              href="#kalkulatory" 
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-gray-900 bg-white hover:bg-gray-50 border-2 border-gray-300 transition-colors rounded-lg"
            >
              Użyj kalkulatora
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Category Cards Section -->
    <section class="py-16 sm:py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Eksploruj nasze kategorie
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Znajdź porady i inspiracje dostosowane do Twoich potrzeb
          </p>
        </div>
        <CategoryGrid />
      </div>
    </section>

    <!-- Latest Articles Section -->
    <section id="artykuly" class="py-16 sm:py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-end justify-between mb-12">
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
              Najnowsze artykuły
            </h2>
            <p class="text-lg text-gray-600">
              Sprawdzone porady od ekspertów branżowych
            </p>
          </div>
          <a 
            href="/artykuly" 
            class="hidden sm:inline-flex items-center text-base font-semibold text-blue-600 hover:text-blue-700 transition-colors"
          >
            Zobacz wszystkie
            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {latestArticles.map((article) => (
            <ArticleCard 
              title={article.title}
              excerpt={article.excerpt}
              href={article.href}
              category={article.category}
              date={article.date}
            />
          ))}
        </div>
        <div class="text-center mt-8 sm:hidden">
          <a 
            href="/artykuly" 
            class="inline-flex items-center text-base font-semibold text-blue-600 hover:text-blue-700 transition-colors"
          >
            Zobacz wszystkie artykuły
            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Calculators Section -->
    <section id="kalkulatory" class="py-16 sm:py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Kalkulatory budowlane
          </h2>
          <h3 class="text-lg text-gray-600 max-w-2xl mx-auto">
            Oblicz dokładne ilości materiałów i szacunkowe koszty dla swojego projektu
          </h3>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {calculators.map((calculator) => (
            <a 
              href={calculator.href}
              class="group bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 hover:shadow-lg transition-all"
            >
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-600 transition-colors">
                  <svg class="w-6 h-6 text-blue-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                    {calculator.title}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {calculator.description}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
        <div class="text-center mt-12">
          <a 
            href="/kalkulatory" 
            class="inline-flex items-center text-base font-semibold text-blue-600 hover:text-blue-700 transition-colors"
          >
            Zobacz wszystkie kalkulatory
            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 sm:py-20 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">
          Gotowy na rozpoczęcie projektu?
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto leading-relaxed">
          Skorzystaj z naszych kalkulatorów i poradników, aby dokładnie zaplanować swój budowlany projekt od A do Z
        </p>
        <a 
          href="/kalkulatory" 
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-blue-600 bg-white hover:bg-gray-50 transition-colors rounded-lg shadow-lg"
        >
          Rozpocznij planowanie
        </a>
      </div>
    </section>
  </main>

  <Footer />
</MainLayout>
