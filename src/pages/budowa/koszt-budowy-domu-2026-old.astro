      <script>
        // CALCULATOR LOGIC
        (function() {
            const slider = document.getElementById('calc-slider');
            const inputVal = document.getElementById('calc-input-val');
            const result = document.getElementById('calc-result');
            const multiplier = 7250; 

            function updateCalc() {
                if(!slider) return;
                const val = parseInt(slider.value);
                inputVal.innerText = val + ' m2';
                const totalCost = val * multiplier;
                result.innerText = totalCost.toLocaleString('pl-PL') + ' PLN';
            }

            if(slider) {
                slider.addEventListener('input', updateCalc);
                updateCalc();
            }
        })();

        // SURVEY LOGIC
        function nextStep(currentStep) {
          const steps = document.querySelectorAll('.survey-step');
          const total = steps.length;
          
          // Hide current
          steps[currentStep].classList.add('hidden');
          
          if (currentStep < total - 1) {
            // Show next
            steps[currentStep + 1].classList.remove('hidden');
          } else {
            // Show result
            document.getElementById('survey-result').classList.remove('hidden');
          }
        }
