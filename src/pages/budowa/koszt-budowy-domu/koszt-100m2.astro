---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ArticleSidebar from '../../../components/ArticleSidebar.astro';

const title = 'Koszt budowy domu 100m²';
const description = 'Przykładowy artykuł wspierający: koszt budowy 100m².';
const pillarUrl = '/budowa/koszt-budowy-domu/';
---

<BaseLayout title={title} description={description}>
  <div class="flex gap-8 pt-8">
    <main class="flex-1 prose">
      <h1>{title}</h1>
      <p>Krótki artykuł wspierający dotyczący kosztów dla domu 100m².</p>
    </main>

    <aside class="w-64">
      <ArticleSidebar pillarUrl={pillarUrl} />
    </aside>
  </div>
</BaseLayout>
