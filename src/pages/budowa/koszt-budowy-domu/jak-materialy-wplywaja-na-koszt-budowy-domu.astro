            <script is:inline>
                document.addEventListener('DOMContentLoaded', () => {
                    const calculateButton = document.getElementById('calculateCost');
                    const houseAreaInput = document.getElementById('houseArea');
                    const materialStandardSelect = document.getElementById('materialStandard');
                    const calculatedCostDiv = document.getElementById('calculatedCost');
                    const minCostSpan = document.getElementById('minCost');
                    const maxCostSpan = document.getElementById('maxCost');

                    const costRanges = {
                        'ekonomiczny': { min: 3800, max: 4500 },
                        'standardowy': { min: 4500, max: 5800 },
                        'premium': { min: 5800, max: 7500 },
                        'pasywny': { min: 7500, max: 9000 }
                    };

                    calculateButton.addEventListener('click', () => {
                        const area = parseFloat(houseAreaInput.value);
                        const standard = materialStandardSelect.value;

                        if (isNaN(area) || area <= 0) {
                            alert('Proszę wprowadzić prawidłową powierzchnię domu.');
                            return;
                        }

                        const range = costRanges[standard];
                        const minTotalCost = area * range.min;
                        const maxTotalCost = area * range.max;

                        minCostSpan.textContent = minTotalCost.toLocaleString('pl-PL', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
                        maxCostSpan.textContent = maxTotalCost.toLocaleString('pl-PL', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
                        calculatedCostDiv.classList.remove('hidden');
                    });
                });
            </script>
            
