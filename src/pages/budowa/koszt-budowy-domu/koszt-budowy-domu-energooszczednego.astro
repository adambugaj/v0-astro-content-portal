                        const resultAreaSpan = document.getElementById('resultArea');
                        const resultCostSpan = document.getElementById('resultCost');

                        const costsPerSystem = {
                            heatPump: {
                                base: 25000, // base cost for 100m2
                                perSqM: 150, // additional cost per sq meter
                                range: 0.2 // 20% fluctuation
                            },
                            rekuperacja: {
