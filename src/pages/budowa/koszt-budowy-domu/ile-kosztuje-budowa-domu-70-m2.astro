import BaseLayout from '../../../layouts/BaseLayout.astro';
import ArticleSidebar from '../../../components/ArticleSidebar.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const title = "Ile kosztuje budowa domu 70 m2 w 2027 roku? Kompleksowy przewodnik";
const description = "Szukasz informacji o kosztach budowy domu 70m2 w 2027 roku? Sprawdź szczegółowe wyceny dla stanu surowego, deweloperskiego i pod klucz, uwzględniające inflację i trendy rynkowe. Dowiedz się, jak zoptymalizować budżet i wybrać najlepszą technologię.";
const canonical = "https://domjakosci.pl/budowa/koszt-budowy-domu/ile-kosztuje-budowa-domu-70-m2/";
const author = 'mgr inż. Marek Nowicki';
const contextNote = "Prognozy kosztów budowy na rok 2027 uwzględniają dynamiczną inflację w sektorze budowlanym oraz rosnące ceny materiałów i usług. Przedstawione dane są precyzyjnym oszacowaniem, bazującym na analizie trendów rynkowych i ekspertyzach branżowych.";

import { breadcrumbs as pillarBreadcrumbs } from '../../../data/koszt-budowy-domu-breadcrumbs.js';
export const breadcrumbs = [
  ...pillarBreadcrumbs,
  { label: 'Ile kosztuje budowa domu 70 m2', url: 'https://domjakosci.pl/budowa/koszt-budowy-domu/ile-kosztuje-budowa-domu-70-m2/' }
];

const faqItems = [
  {
    question: "Czy budowa domu 70 m2 bez pozwolenia jest możliwa i opłacalna w 2027 roku?",
    answer: "Tak, budowa domu o powierzchni zabudowy do 70 m2 na zgłoszenie pozostaje atrakcyjną opcją w 2027 roku, dzięki uproszczonym procedurom z Polskiego Ładu. Omija się konieczność uzyskania pozwolenia na budowę oraz zatrudnienia kierownika budowy (pod pewnymi warunkami), co znacząco skraca czas realizacji i obniża koszty formalne, szacunkowo o 5-10%."
  },
  {
    question: "Jakie są główne czynniki wpływające na ostateczny koszt domu 70 m2 w 2027 roku?",
    answer: "Główne czynniki to technologia budowy (murowana, szkieletowa), lokalizacja działki, standard wykończenia (ekonomiczny, średni, wysoki), rodzaj użytych materiałów (np. energooszczędne izolacje), oraz system realizacji inwestycji (system gospodarczy vs. generalny wykonawca). Różnice w kosztach między standardem ekonomicznym a wysokim mogą wynosić nawet 100%."
