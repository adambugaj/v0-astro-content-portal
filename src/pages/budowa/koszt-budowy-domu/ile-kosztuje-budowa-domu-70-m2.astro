              const costResultDiv = document.getElementById('costResult');
              const estimatedCostSpan = document.getElementById('estimatedCost');

              calculateCostButton.addEventListener('click', () => {
                const technology = buildingTechnologySelect.value;
                const stage = completionStageSelect.value;
                let minCost = 0;
                let maxCost = 0;

                // Costs for 70m2 house in 2027
                const costs = {
                  murowany: {
                    sso: { min: 85000, max: 120000 },
                    ssz: { min: 133000, max: 205000 },
                    deweloperski: { min: 170000, max: 290000 },
                    podklucz: { min: 340000, max: 480000 } // Adjusted max for average standard
                  },
                  szkieletowy: {
                    sso: { min: 80000, max: 110000 },
                    ssz: { min: 125000, max: 190000 },
                    deweloperski: { min: 160000, max: 270000 },
                    podklucz: { min: 330000, max: 450000 }
                  }
                };

                if (costs[technology] && costs[technology][stage]) {
                  minCost = costs[technology][stage].min;
                  maxCost = costs[technology][stage].max;
                  estimatedCostSpan.textContent = `${minCost.toLocaleString('pl-PL')} zł - ${maxCost.toLocaleString('pl-PL')} zł`;
