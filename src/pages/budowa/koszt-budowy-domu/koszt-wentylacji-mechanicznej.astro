---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ArticleSidebar from '../../../components/ArticleSidebar.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const title = "Koszt wentylacji mechanicznej w 2026 roku – kompleksowy przewodnik";
const description = "Ile kosztuje wentylacja mechaniczna z rekuperacją w 2026 roku? Sprawdź szczegółowy kosztorys: projekt, urządzenia, montaż i eksploatacja. Dowiedz się, jak zaoszczędzić do 40% na ogrzewaniu i czy inwestycja w rekuperację się opłaca.";
const canonical = "https://domjakosci.pl/budowa/koszt-budowy-domu/koszt-wentylacji-mechanicznej/";
const author = 'mgr inż. Marek Nowicki';
const contextNote = "Analiza kosztów wentylacji mechanicznej w 2026 roku bazuje na aktualnych trendach rynkowych, prognozach cen materiałów budowlanych oraz stawek robocizny, uwzględniając inflację i dynamiczne zmiany w sektorze energii. Przedstawione dane są precyzyjne i odzwierciedlają realia inwestycyjne na początku roku.";
const badgeText = "Raport Rynkowy 2026";
const badgeClass = "bg-green-100 text-green-700";

import { breadcrumbs as pillarBreadcrumbs } from '../../../data/koszt-budowy-domu-breadcrumbs.js';
export const breadcrumbs = [
  ...pillarBreadcrumbs,
  { label: 'Koszt wentylacji mechanicznej', url: 'https://domjakosci.pl/budowa/koszt-budowy-domu/koszt-wentylacji-mechanicznej/' }
];

const datePublished = "2026-01-27T12:00:00+01:00"; // Dynamicznie ustawiona data
const dateFormatted = "27 stycznia 2026"; // Dynamicznie ustawiona data

const faqItems = [
    {
        question: "Jaki jest średni koszt instalacji wentylacji mechanicznej z rekuperacją dla domu 150m² w 2026 roku?",
        answer: "W 2026 roku kompletny system wentylacji mechanicznej z odzyskiem ciepła dla domu o powierzchni około 150 m² to inwestycja rzędu 30 000 zł do 45 000 zł brutto, obejmująca projekt, zakup urządzeń i profesjonalny montaż. Ostateczna cena zależy od wielu czynników, takich jak wybrany rekuperator czy złożoność instalacji kanałów wentylacyjnych."
    },
    {
        question: "Ile można zaoszczędzić na ogrzewaniu dzięki rekuperacji i czy faktycznie się to opłaca?",
        answer: "Inwestycja w rekuperację w 2026 roku pozwala na realne oszczędności na kosztach ogrzewania, sięgające nawet 30-40% rocznie. System odzyskuje ciepło z wywiewanego powietrza, co znacząco zmniejsza zapotrzebowanie na energię cieplną. Biorąc pod uwagę rosnące ceny energii, zwrot z inwestycji zazwyczaj następuje w ciągu 5-8 lat, a dodatkowo zyskujemy lepszą jakość powietrza i komfort w domu."
    },
    {
        question: "Czy rekuperacja wymaga specjalnych warunków montażu lub konserwacji?",
        answer: "Tak, prawidłowy montaż rekuperacji wymaga szczegółowego projektu, uwzględniającego specyfikę budynku (szczelność, układ pomieszczeń) oraz profesjonalnego wykonania instalacji kanałowej. Konserwacja jest stosunkowo prosta i polega głównie na regularnej (co 3-6 miesięcy) wymianie filtrów powietrza oraz corocznym przeglądzie serwisowym, co kosztuje około 800-1200 zł rocznie."
    },
    {
        question: "Jakie są główne typy wymienników ciepła w rekuperatorach i który jest najbardziej efektywny?",
        answer: "W rekuperatorach najczęściej spotyka się trzy typy wymienników: krzyżowe, przeciwprądowe i obrotowe. Wymienniki przeciwprądowe są uznawane za najbardziej efektywne, osiągając sprawność odzysku ciepła nawet do 95%, co przekłada się na największe oszczędności energetyczne. Wymienniki obrotowe dodatkowo odzyskują wilgoć, co jest korzystne dla komfortu w suchych klimatach."
    },
    {
        question: "Czy wentylacja mechaniczna z rekuperacją ma wpływ na wilgotność powietrza w domu?",
        answer: "Tak, rekuperacja w znaczący sposób wpływa na utrzymanie optymalnej wilgotności powietrza w pomieszczeniach. Standardowe rekuperatory usuwają nadmiar wilgoci, co zapobiega rozwojowi pleśni i grzybów, ale może też prowadzić do nadmiernego przesuszenia powietrza zimą. Niektóre zaawansowane modele z wymiennikiem entalpicznym lub obrotowym potrafią odzyskiwać część wilgoci, co pomaga utrzymać komfortowy poziom wilgotności, np. w zakresie 40-60%."
    },
    {
        question: "Czy można zainstalować rekuperację w istniejącym, starszym budynku, który nie był projektowany pod wentylację mechaniczną?",
        answer: "Tak, instalacja rekuperacji jest możliwa w istniejących budynkach, jednak jest zazwyczaj bardziej skomplikowana i kosztowna niż w nowo budowanym domu. Wymaga adaptacji przestrzeni na kanały wentylacyjne, co często wiąże się z pracami remontowymi, np. obniżeniem sufitów. Kluczowe jest również zapewnienie odpowiedniej szczelności budynku, często wymagającej termomodernizacji, aby system działał efektywnie i generował oczekiwane oszczędności."
    }
];

// Spis treści - generowanie ID dla nagłówków
const generateSlug = (text: string) => text.toLowerCase()
    .normalize("NFD").replace(/[\u0300-\u036f]/g, "") // remove diacritics
    .replace(/[^a-z0-9\s-]/g, "") // remove non-alphanumeric chars
    .replace(/\s+/g, "-") // replace spaces with hyphens
    .replace(/-+/g, "-") // remove multiple hyphens
    .trim();

const headings = [
    { level: 2, text: "Co to jest wentylacja mechaniczna z odzyskiem ciepła (rekuperacja)?" },
    { level: 2, text: "Ile kosztuje wentylacja mechaniczna w 2026 roku? Przegląd cen" },
    { level: 3, text: "Koszty inwestycyjne wentylacji mechanicznej – szczegółowa tabela" },
    { level: 2, text: "Składowe kosztów inwestycyjnych wentylacji mechanicznej" },
    { level: 3, text: "Projekt systemu rekuperacji – podstawa efektywności" },
    { level: 3, text: "Koszt urządzeń – rekuperatora i osprzętu w 2026 roku" },
    { level: 3, text: "Koszty montażu i uruchomienia systemu rekuperacji" },
    { level: 2, text: "Koszty eksploatacyjne wentylacji mechanicznej w 2026 roku" },
    { level: 3, text: "Zużycie energii elektrycznej przez rekuperator" },
    { level: 3, text: "Regularna wymiana filtrów powietrza" },
    { level: 3, text: "Serwis i przeglądy techniczne" },
    { level: 2, text: "Wentylacja mechaniczna a oszczędności – czy rekuperacja się opłaca w 2026?" },
    { level: 2, text: "Rekuperacja a wentylacja grawitacyjna – kluczowe różnice i koszty" },
    { level: 2, text: "Kalkulator orientacyjnych kosztów wentylacji mechanicznej w 2026 roku" },
    { level: 2, text: "Ankieta: Twoje priorytety przy wyborze systemu wentylacji" },
];

const tocHtml = headings.map(h => {
    const slug = generateSlug(h.text);
    const indentClass = h.level === 3 ? "ml-6" : "";
    return `<a href="#${slug}" class="block hover:text-blue-700 transition-colors ${indentClass}">${h.text}</a>`;
}).join('');

---
<BaseLayout title={title} description={description} canonical={canonical} type="article">
  <main class="max-w-7xl mx-auto px-4 py-12">
    <Breadcrumbs items={breadcrumbs} />
    <div class="flex flex-col lg:flex-row lg:gap-16">
      <article class="lg:flex-1">

    <header class="mb-12">
            <span class="inline-block py-1 px-3 rounded-full {badgeClass} font-bold text-sm font-bold mb-4 uppercase tracking-wider">
                {badgeText}
            </span>

            <h1 class="text-4xl lg:text-5xl font-extrabold tracking-tight text-zinc-900 mb-8 leading-tight">
                {title}
            </h1>

    <div class="flex flex-col gap-y-8 border-b pb-10 border-zinc-100">
        
        <div class="flex flex-wrap items-center gap-x-10 gap-y-3">
            <div class="flex items-center gap-2.5 group">
                <div class="p-2 rounded-lg bg-zinc-50 group-hover:bg-blue-50 transition-colors">
