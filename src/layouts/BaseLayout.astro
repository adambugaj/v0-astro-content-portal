---
const { 
  title = "Ekspercki Portal o Budowie Domów, Kosztach, Energetyce i Inwestowaniu w Nieruchomości", 
  description = "Portal ekspercki o budowie domów, kosztach realizacji, energii odnawialnej i inwestowaniu w nieruchomości – z praktycznymi kalkulatorami i poradnikami krok po kroku.",
  canonical,
  type = "website",
  image = "https://domjakosci.pl/og-image.jpg",
  author = "Dariusz Nowicki"
} = Astro.props;

const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
const siteName = "Dom Jakości";
// Decide when to center content: only for deeper subpages (e.g. /category/article)
const pathSegments = (Astro.url.pathname || '').split('/').filter(Boolean);
const centered = pathSegments.length > 1;
---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="pl_PL" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": type === "article" ? "Article" : "WebSite",
      "name": siteName,
      "url": canonicalURL,
      "description": description,
      "publisher": {
        "@type": "Organization",
        "name": siteName,
        "url": "https://domjakosci.pl",
        "logo": {
          "@type": "ImageObject",
          "url": "https://domjakosci.pl/favicon.svg"
        }
      },
      ...(type === "article" && {
        "author": {
          "@type": "Person",
          "name": author
        },
        "headline": title,
        "image": image,
        "datePublished": new Date().toISOString(),
        "dateModified": new Date().toISOString()
      })
    })} />
  </head>
  <body class="min-h-screen bg-white">
    <!-- Full-width header rendered from layout so it always spans viewport -->
    <Header />

    <!-- Center only for deeper category/article pages; keep homepage and top-level category pages full width -->
    {centered ? (
      <div class="max-w-7xl mx-auto px-4">
        <slot />
      </div>
    ) : (
      <slot />
    )}

    <!-- Full-width footer rendered from layout -->
    <Footer />

    <script>
      // Ensure every article page shows a sidebar. If no sidebar present on page, fetch a lightweight fallback
      // sidebar HTML (static) and insert it on large viewports. This avoids server edits for every article file.
      document.addEventListener('DOMContentLoaded', () => {
        if (!document.querySelector('article')) return;
        // don't inject if an aside with class 'article-sidebar' exists
        if (document.querySelector('aside.article-sidebar')) return;

        // Only inject on wide screens (desktop)
        if (window.innerWidth < 1024) return;

        fetch('/sidebar.html').then(r => r.text()).then(html => {
          try {
            const container = document.createElement('div');
            container.innerHTML = html;
            const aside = container.querySelector('aside');
            if (aside) {
              aside.classList.add('article-sidebar');
              aside.style.marginTop = '1rem';
              // place after the article element
              const article = document.querySelector('article');
              if (article && article.parentElement) {
                // If page already uses a grid with sidebar, append; otherwise create a two-column layout
                const parent = article.parentElement;
                const wrapper = document.createElement('div');
                wrapper.className = 'flex flex-col lg:flex-row lg:items-start lg:gap-8';
                // move current article into wrapper
                parent.replaceChild(wrapper, article);
                article.classList.add('lg:flex-1');
                wrapper.appendChild(article);
                wrapper.appendChild(aside);
              }
            }
          } catch (err) {
            // fail silently
            console.warn('Sidebar inject failed', err);
          }
        }).catch(() => {});
      });
    </script>
  </body>
</html>
